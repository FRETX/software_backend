html
  head
    title FRETX
    == no_scaling
    == css ['chordpicker','index']
    == js  ['jquery','rivets','lib','chordpicker','youtube','index']
  body
    .content
      .header
        img#logo src='logo.png'
  
      .addvid
        INPUT#link value="Add the link to your YouTube video here..."
        BUTTON Add
      .vid
        #player
        .vidinfo#footnotediv
          | Absolute Super Beginner Guitar Lesson
          | <BR> Details
      .punch
        INPUT#ask_chord type='checkbox'
        LABEL for='ask_chord' Ask Chord
        BUTTON#gettime rv-on-click='ctrl.add_punch' Add Video Time
        BUTTON#upload onclick='upload();' Upload
      .punchlist#punchlist
        .punchrow rv-each-punch='data.punches'
          BUTTON rv-on-click='ctrl.delete_punch' Delete  
          INPUT rv-value='punch.disp_time'
          INPUT.chord rv-on-click='ctrl.choose_chord' rv-value='punch.chord'